<div class="container">
    <div class="row mt-3">
        <div class="col-md">
            <a href="/" class="h2 text-dark">knowledge<span class="kbcolor">Base</span></a>
        </div>
        <div class="col-md">
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md">
            <h1>Let us know a little more about you</h1>
        </div>
        <div class="col-md">
            <form action="/signupdetails" method="POST">
                <div class="form-group">
                    <input type="url" class="form-control" placeholder="Image URL" name="image" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" placeholder="A few lines about yourself..." name="details"></textarea>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Country" name="country" required>
                </div>
                <div class="form-group">
                    <input type="date" class="form-control" placeholder="Birthdate" name="birthdate" required>
                </div>
                <button type="submit" class="btn btn-outline-primary btn-block">Complete Registration</button>
            </form>
        </div>
    </div>
</div>